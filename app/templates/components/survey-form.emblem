h3 New Survey

form{action 'submitSurvey' on='submit'}
  .row
    .medium-3.columns
      label System
      = input value=system type='text' placeholder='Ceeckia ZQ-L c24-0' 
    .medium-1.columns
      label World
      = input value=world type='text' placeholder='2' 
    .medium-4.columns
      label Surveyors
      = input value=model.survey.surveyed_by type='text' placeholder='Kamzel, Dr.Kaii' 
    .medium-2.columns.end
      label Date
      = pikaday-input value=model.survey.surveyed_at useUTC=true
    .row
      .medium-12.columns
        legend Materials found
    .row
      .medium-2.columns
        =material-survey rarity="Very Common" survey=model.survey
      .medium-2.columns
        =material-survey rarity="Common" survey=model.survey
      .medium-2.columns
        =material-survey rarity="Rare" survey=model.survey
      .medium-2.columns.end
        =material-survey rarity="Very Rare" survey=model.survey
